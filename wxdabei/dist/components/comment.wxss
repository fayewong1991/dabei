
.comment{
  width: 100%;
}
.comment-time{
  float: left;
  font-size: 22rpx;
  color: #999;  
}
.comment-action{
  float: right;
}
.comment-action-like{
  font-size: 29rpx;
  margin-right: 96rpx; 
}
.comment-like-icon{
  margin-right: 12rpx;  
}
.comment-action-add{
  font-size: 29rpx;  
}
.comment-add-icon{
  margin-right: 12rpx;  
}
.comment-like-avatars{
  width: 100%;
  height: 60rpx;
  margin-top: 52rpx;
  margin-bottom: 26rpx; 
}
.comment-like-avatar{
  height: 100%;
  width: 60rpx;
  margin-right: 8rpx;  
}
.comment-add-item{
  width: 100%;
  font-size: 28rpx;
  margin-bottom: 22rpx; 
}
.comment-add-item-label{
  margin-right: 24rpx;
}
.comment-add-item-name,.comment-add-item-name{
  color: #333;  
}
.comment-add-item-words{
  color: #666;  
}
.comment-add-input{
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 100;
  padding: 15rpx 10rpx;
  border: 1rpx solid #666;  
}
.comment-add-input-text{
  padding-left: 10rpx;
  display: inline-block;
  width: 70%;
  height: 80rpx;
  border: 1rpx solid #666;
  line-height: 78rpx;
  font-size: 26rpx;
  color: #333;
  vertical-align: top;
}
.comment-add-input-publish{
  width: 28%;
  border-top: 1rpx solid #333;
  border-right: 1rpx solid #333;
  border-bottom: 1rpx solid #333;
  text-align: center;
  display: inline-block;
  vertical-align: top;
  height: 80rpx;
  line-height: 78rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #ff7335; 
}

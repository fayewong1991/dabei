
.search-container{
  width: 100%;
  height: 65rpx;
  position: relative;  
}
.search-text{
  position: absolute;
  left: 330rpx;
  top: 15rpx;
  font-size: 27rpx;
  color: #8E8E93;
  z-index: 10; 
}
.search-icon{
  display: inline-block;
  vertical-align: top;  
}
.search-icon{
  margin-right: 10rpx;  
}
.search-text-focus{
  left: 25rpx;  
}
.search-input{
  width: 100%;  
}
.search-text-input{
  display: inline-block;  
  width: 100%;
  height: 100%;
  background-color: #F4F4F4;
  font-size: 27rpx;
  color: #8E8E93;  
}
.search-text-input-focus{
  width: 561rpx;
  margin-right: 15rpx;  
}
.search-input-confirm{
  display: inline-block;
  height: 100%;  
  width: auto;
  text-align: center;
  background-color: #FF7238;
  color: #fff;
  font-size: 28rpx;
  line-height: 1;  
}
.search-recommend{
  width: 100%;
  margin-top: 33rpx;
  position: relative;  
}
.search-recommend-clear{
  position: absolute;
  right: 0;
  top: 0;
  color: #999;
}
.search-recommend-item{
  width: 100%;
  margin-bottom: 40rpx;  
}
.search-recommend-item-title{
  width: 100%;
  color: #333;
  font-size: 27rpx;
  margin-bottom: 25rpx;  
}
.search-norecommend-tip{
  font-size: 18rpx;
  color: #999;   
}
.search-recommend-content-item{
  vertical-align: top;  
  display: inline-block;
  height: 56rpx;
  line-height: 56rpx;
  padding-left: 17rpx;
  padding-right: 17rpx;
  color: #333;
  margin-right: 16rpx; 
}
.search-recommend-content-item-focus{
  color: #FF713B; 
}

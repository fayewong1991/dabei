
  <view class="index-container">
    <view class="teach-tabs" bindtap="switchTab">
      <text class="teach-tab {{imageShow ? 'teach-tab-on' : ''}}" data-tab-type="image">图文</text>
      <text class="teach-tab {{videoShow ? 'teach-tab-on' : ''}}" data-tab-type="video">视频</text>
    </view>
    <block  wx:if="{{imageShow && imageTextList}}">
      <block wx:for="{{imageTextList}}" wx:for-index="index" wx:for-item="item" wx:key="*this">
          
  <view class="teach-item">
    <view class="teach-item-wrap">
      <view class="teach-item-head">{{item.head}}</view>
      <view class="teach-item-content">{{item.content}}</view>
      <view class="teach-item-line"/>
      <view class="teach-item-collect">
        <text class="teach-item-col">{{item.read}}阅读</text>·<text class="teach-item-col">{{item.collect}}收藏</text>  
      </view>
    </view>

    <view class="teach-item-imgvideo">
      <block  wx:if="{{teachType == 'image'}}">
        <image class="teach-item-img" src="{{item.imgUrl}}"/>
      </block>
      <block  wx:else>
        <video class="teach-item-video" src="{{item.imgUrl}}"/>
      </block>
    </view>
  </view>

      </block>
    </block>
    <block wx:if="{{videoShow && videoList}}">
      <block wx:for="{{videoList}}" wx:for-index="index" wx:for-item="item" wx:key="*this">
          
  <view class="teach-item">
    <view class="teach-item-wrap">
      <view class="teach-item-head">{{item.head}}</view>
      <view class="teach-item-content">{{item.content}}</view>
      <view class="teach-item-line"/>
      <view class="teach-item-collect">
        <text class="teach-item-col">{{item.read}}阅读</text>·<text class="teach-item-col">{{item.collect}}收藏</text>  
      </view>
    </view>

    <view class="teach-item-imgvideo">
      <block  wx:if="{{teachType == 'image'}}">
        <image class="teach-item-img" src="{{item.videoUrl}}"/>
      </block>
      <block  wx:else>
        <video class="teach-item-video" src="{{item.videoUrl}}"/>
      </block>
    </view>
  </view>

      </block>
    </block>
  </view>